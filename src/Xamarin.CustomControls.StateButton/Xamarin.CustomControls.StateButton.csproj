<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<RootNamespace>Xamarin.CustomControls</RootNamespace>
	</PropertyGroup>
	<ItemGroup>
		<Compile Update="MyView.xaml.cs">
			<DependentUpon>StateButton.xaml</DependentUpon>
		</Compile>
		<Compile Condition=" '$(EnableDefaultCompileItems)' == 'true' " Update="StateButton.xaml.cs">
		  <DependentUpon>*.xaml</DependentUpon>
		</Compile>
	</ItemGroup>
	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<PackageId>Xamarin.CustomControls.StateButton</PackageId>
		<PackageVersion>1.0.7</PackageVersion>
		<Authors>DottorPagliaccius</Authors>
		<Description>StateButton custom control for Xamarin.Forms</Description>
		<PackageLicenseUrl>https://github.com/DottorPagliaccius/Xamarin-Custom-Controls/blob/master/LICENSE</PackageLicenseUrl>
		<PackageProjectUrl>https://github.com/DottorPagliaccius/Xamarin-Custom-Controls</PackageProjectUrl>
		<PackageIconUrl>https://raw.githubusercontent.com/DottorPagliaccius/Xamarin-Custom-Controls/master/art/StateButtonIcon.png</PackageIconUrl>
		<PackageReleaseNotes>1.0.6/7 - converted to dotnetstandard 
1.0.5 - fixed Style bug     
1.0.4 - added InnerPadding property    
1.0.3 - bugfix
1.0.2 - added image rotation effect</PackageReleaseNotes>
		<PackageTags>xamarin;pcl;xam.pcl;control;customcontrol;button;statebutton;state;android;xamarin.forms;ios;monoandroid;monodroid;monotouch</PackageTags>
		<PackOnBuild>true</PackOnBuild>
		<Title>StateButton</Title>
	</PropertyGroup>
	<ItemGroup>
		<PackageReference Include="Xamarin.Forms" Version="2.4.0.282" />
	</ItemGroup>
	<ItemGroup>
	  <EmbeddedResource Include="StateButton.xaml">
	    <SubType>Designer</SubType>
	    <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
	  </EmbeddedResource>
	</ItemGroup>
</Project>