    <ContentView.Content>
        <controls:PullToRefreshLayout x:Name="PullToRefreshPanel">
            <ScrollView HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                <local:RepeaterView x:Name="MainRepeater" HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand">

				</local:RepeaterView>
				</ScrollView>
        </controls:PullToRefreshLayout>
    </ContentView.Content>
</ContentView>